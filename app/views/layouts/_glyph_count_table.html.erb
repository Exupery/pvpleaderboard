<table class="table table-bordered table-condensed table-responsive table-hover table-sorted center" data-sortlist="[[1,1]]">
	<thead>
		<tr>
			<th><%= glyph_type %> Glyph</th>
			<th>Percent</th>
		</tr>
	</thead>
	<tbody>
		<% class_glyphs = Glyphs.get_glyphs @class_id %>
		<% counts.each do |id, count| %>
			<% glyph = class_glyphs[id] %>
			<tr>
				<td>
					<a href="https://www.wowhead.com/spell=<%= glyph[:spell_id] %>" rel="spell=<%= glyph[:spell_id] %>&amp;lvl=100" target="_blank" class="no-a-style"><img src="/images/icons/<%= glyph[:icon] %>.png" class="img-responsive center" alt="<%= glyph[:name] %>"><%= glyph[:name] %></a>
				</td>
				<td><%= (count.to_f / @total * 100).round(1) %>%</td>
			</tr>
		<% end %>
	</tbody>
</table>