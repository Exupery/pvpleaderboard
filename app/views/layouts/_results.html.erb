<div class="results-panel center" role="tabpanel">

  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#tab-pane-class-talents" aria-controls="class-talents" role="tab" data-toggle="tab" data-fragment="class-talents"><%= @class_name %> Talents</a></li>
    <li role="presentation"><a href="#tab-pane-spec-talents" aria-controls="spec-talents" role="tab" data-toggle="tab" data-fragment="spec-talents"><%= @spec_name %> Talents</a></li>
    <li role="presentation"><a href="#tab-pane-hero-talents" aria-controls="hero-talents" role="tab" data-toggle="tab" data-fragment="hero-talents">Hero Talents</a></li>
    <li role="presentation"><a href="#tab-pane-pvp-talents" aria-controls="pvp-talents" role="tab" data-toggle="tab" data-fragment="pvp-talents">PvP Talents</a></li>
    <li role="presentation"><a href="#tab-pane-gear" aria-controls="gear" role="tab" data-toggle="tab" data-fragment="gear">Gear</a></li>
    <li role="presentation"><a href="#tab-pane-stats" aria-controls="stats" role="tab" data-toggle="tab" data-fragment="stats">Stats</a></li>
    <li role="presentation"><a href="#tab-pane-players" aria-controls="players" role="tab" data-toggle="tab" data-fragment="players" title="<%= @players_title %>">Top Players</a></li>
  </ul>

  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="tab-pane-class-talents">
      <%= render "layouts/talent_tree", :label => "class", :talent_positions => class_talent_counts_tree(@class_id, @spec_id, @class_talent_counts) %>
    </div>
    <div role="tabpanel" class="tab-pane" id="tab-pane-spec-talents">
      <%= render "layouts/talent_tree", :label => "spec", :talent_positions => spec_talent_counts_tree(@spec_id, @spec_talent_counts) %>
    </div>
    <div role="tabpanel" class="tab-pane" id="tab-pane-hero-talents">
      <%= render "layouts/talents_table", :label => "hero", :talents => hero_talent_counts(@spec_id, @hero_talent_counts) %>
    </div>
    <div role="tabpanel" class="tab-pane" id="tab-pane-pvp-talents">
      <%= render "layouts/talents_table", :label => "pvp", :talents => pvp_talent_counts(@spec_id, @pvp_talent_counts) %>
    </div>
    <div role="tabpanel" class="tab-pane" id="tab-pane-gear">
      <%= render "layouts/gear_table", :gear => @gear %>
    </div>
    <div role="tabpanel" class="tab-pane" id="tab-pane-stats">
      <%= render "layouts/stats_table", :counts => @stat_counts %>
    </div>
    <div role="tabpanel" class="tab-pane" id="tab-pane-players">
      <%= render "layouts/players_table", :players => @top_players %>
    </div>
  </div>

  <%= render "layouts/last_updated" %>
</div>