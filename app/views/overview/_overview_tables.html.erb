<div class="results-panel center" role="tabpanel">

  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#overview-by-class" aria-controls="overview-by-class" role="tab" data-toggle="tab">Class</a></li>
    <li role="presentation"><a href="#overview-by-spec" aria-controls="overview-by-spec" role="tab" data-toggle="tab">Spec</a></li>
    <li role="presentation"><a href="#overview-by-race" aria-controls="overview-by-race" role="tab" data-toggle="tab">Race</a></li>
    <li role="presentation"><a href="#overview-by-faction" aria-controls="overview-by-faction" role="tab" data-toggle="tab">Faction</a></li>
    <li role="presentation"><a href="#overview-by-realm" aria-controls="overview-by-realm" role="tab" data-toggle="tab">Realm</a></li>
  </ul>

  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="overview-by-class">
      <table class="table table-bordered table-condensed table-responsive table-hover table-sorted center" data-sortlist="[[2,1]]">
        <thead>
          <tr>
            <th>Class</th>
            <th>Count</th>
            <th>Percent</th>
          </tr>
        </thead>
        <tbody>
          <% percents = percent_counts @classes %>
          <% @classes.each do |cl, c| %>
            <tr>
              <td title="<%= cl %>"><img src="/images/classes/<%= slugify cl %>.png" class="img-responsive center" alt="<%= cl %>"></td>
              <td><%= c %></td>
              <td><%= percents[cl] %>%</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div role="tabpanel" class="tab-pane" id="overview-by-spec">
      <table class="table table-bordered table-condensed table-responsive table-hover table-sorted center" data-sortlist="[[3,1]]">
        <thead>
          <tr>
            <th>Spec</th>
            <th>Class</th>
            <th>Count</th>
            <th>Percent</th>
          </tr>
        </thead>
        <tbody>
          <% percents = spec_percent_counts %>
          <% @specs.each do |slug, info| %>
            <tr>
              <% spec = info.name %>
              <td title="<%= spec %>"><img src="/images/icons/<%= info.icon %>.png" class="img-responsive center" alt="<%= spec %>"></td>
              <td title="<%= info.class_name %>"><img src="/images/classes/<%= slugify info.class_name %>.png" class="img-responsive center" alt="<%= info.class_name %>"></td>
              <td><%= info.count %></td>
              <td><%= percents[slug] %>%</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div role="tabpanel" class="tab-pane" id="overview-by-race">
      <table class="table table-bordered table-condensed table-responsive table-hover table-sorted center" data-sortlist="[[2,1]]">
        <thead>
          <tr>
            <th>Race</th>
            <th>Count</th>
            <th>Percent</th>
          </tr>
        </thead>
        <tbody>
          <% percents = percent_counts @races %>
          <% @races.each do |r, c| %>
            <tr>
              <td title="<%= r %>">
                <% race_slug = slugify r %>
                <img src="/images/races/<%= race_slug %>_female.png" class="img-responsive center inline-block" alt="<%= r %> Female">
                <img src="/images/races/<%= race_slug %>_male.png" class="img-responsive center inline-block" alt="<%= r %> Male">
              </td>
              <td><%= c %></td>
              <td><%= percents[r] %>%</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div role="tabpanel" class="tab-pane" id="overview-by-faction">
      <table class="table table-bordered table-condensed table-responsive table-hover table-sorted center" data-sortlist="[[2,1]]">
        <thead>
          <tr>
            <th>Faction</th>
            <th>Count</th>
            <th>Percent</th>
          </tr>
        </thead>
        <tbody>
          <% percents = percent_counts @factions %>
          <% @factions.each do |f, c| %>
            <tr>
              <td title="<%= f %>"><img src="/images/<%= f.downcase %>.png" class="img-responsive center" alt="<%= f %>"></td>
              <td><%= c %></td>
              <td><%= percents[f] %>%</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div role="tabpanel" class="tab-pane" id="overview-by-realm">
      <table class="table table-bordered table-condensed table-responsive table-hover table-sorted center" data-sortlist="[[2,1],[1,1],[0,0]]">
        <thead>
          <tr>
            <th>Realm</th>
            <th>Count</th>
            <th>Percent</th>
          </tr>
        </thead>
        <tbody>
          <% percents = percent_counts @realms %>
          <% @realms.each do |r, c| %>
            <tr>
              <td><%= r %></td>
              <td><%= c %></td>
              <td><%= percents[r] %>%</td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <h4>Showing only top 50 realms</h4>
    </div>

  </div>

  <%= render "layouts/last_updated" %>
</div>