<form class="filter-form center">
  <%= render "basic_filter" %>

  <button class="btn btn-default margin-top-1em" type="button" data-toggle="collapse" data-target="#advanced-filters" aria-expanded="false" aria-controls="collapse-advanced-filters">Show Advanced Filters</button>
  <div class="collapse" id="advanced-filters">
    <%= render "adv_filter" %>
  </div>

  <div class="margin-top-2em">
    <input class="btn btn-danger btn-lg" type="button" value="Reset">
    <input class="btn btn-primary btn-lg btn-submit" type="button" value="Filter">
  </div>
</form>